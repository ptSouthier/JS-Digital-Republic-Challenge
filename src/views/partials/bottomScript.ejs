<script>
  const wallsDimensionsForm = document.querySelector('#walls-dimensions-form');
  const wallsFieldsets = document.querySelectorAll('.wall-fieldset');
  

  const getSquareMeter = (height, width) => {
    return height * width;
  };

  const getWindowsAndDoorsTotalArea = (windowsQuantity, doorsQuantity) => {
    const windowMeasures = { height: 1.2, width: 2 };
    const doorMeasures = { height: 1.9, width: 0.8 };
    const windowsArea = getSquareMeter(windowMeasures.height, windowMeasures.width);
    const doorsArea = getSquareMeter(doorMeasures.height, doorMeasures.width);
    const windowsTotalArea = windowsArea * windowsQuantity;
    const doorsTotalArea = doorsArea * doorsQuantity;
    return windowsTotalArea + doorsTotalArea;
  };

  const getWallsValues = (wallsElements) => {
    const wallsObj = {};
    wallsElements.forEach((wall, currentIndex) => {
      const heightValue = parseFloat(wall.querySelector(`#height-${currentIndex}`).value);
      const widthValue = parseFloat(wall.querySelector(`#width-${currentIndex}`).value);
      const windowsValue = parseFloat(wall.querySelector(`#windows-${currentIndex}`).value);
      const doorsValue = parseFloat(wall.querySelector(`#doors-${currentIndex}`).value);
      wallsObj[`wall${currentIndex}`] = [heightValue, widthValue, windowsValue, doorsValue];
    });
    console.log(wallsObj);
  };

  const handleSubmit = (event) => {
    event.preventDefault();
    return getWallsValues(wallsFieldsets);
  };

  wallsDimensionsForm.addEventListener('submit', handleSubmit);
</script>
